{
  "name": "testapp",
  "type": "AIflow:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "imports": [
    "github.com/r2d2-ai/ai-box/flow",
    "github.com/r2d2-ai/ai-box/common/trigger/rest",
    "github.com/r2d2-ai/ai-box/common/activity/log"
  ],
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/r2d2-ai/ai-box/common/trigger/rest",
      "name": "Receive HTTP Message",
      "settings": {
        "port": "8888"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/test/:val"
          },
          "action": {
            "ref": "github.com/r2d2-ai/ai-box/flow",
            "settings": {
              "flowURI": "res://flow:log"
            },
            "input": {
              "in" : "=$.pathParams.val"
            }
          }
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:log",
      "data": {
        "name": "simpleflow",
        "metadata": {
          "input": [
            {
              "name": "in",
              "type": "string"
            }
          ]
        },
        "tasks": [
          {
            "id": "log_1",
            "name": "Log 1",
            "activity": {
              "ref": "#log",
              "input": {
                "message": "=$flow.in"
              }
            }
          },
          {
            "id": "log_2",
            "name": "Log 2",
            "activity": {
              "ref": "#log",
              "input": {
                "message": "second log message"
              }
            }
          }
        ],
        "links": [
          {
            "from":"log_1",
            "to":"log_2"
          }
        ]
      }
    }
  ]
}