{
  "name": "AIflow-filter",
  "type": "AIflow:activity",
  "version": "0.2.0",
  "title": "Filter",
  "description": "Simple Filter Activity",
  "homepage": "https://github.com/r2d2-ai/aiflow/tree/master/activity/common/filter",
  "settings": [
    {
      "name": "type",
      "type": "string",
      "required": true,
      "allowed" : ["non-zero"]
    },
    {
      "name": "proceedOnlyOnEmit",
      "type": "boolean"
    }
  ],
  "input":[
    {
      "name": "value",
      "type": "any"
    }
  ],
  "output": [
    {
      "name": "filtered",
      "type": "boolean"
    },
    {
      "name": "value",
      "type": "any"
    }
  ]
}
